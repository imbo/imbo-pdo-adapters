{
  "name": "imbo/imbo-pdo-adapters",
  "type": "library",
  "description": "PDO adapters for Imbo",
  "keywords": [ "imbo" ],
  "homepage": "https://imbo.io/",
  "license": "MIT",
  "authors": [
    {
      "name": "Christer Edvartsen",
      "email": "cogo@starzinger.net",
      "homepage": "https://github.com/christeredvartsen"
    }, {
      "name": "Contributors",
      "homepage": "https://github.com/imbo"
    }
  ],
  "require": {
    "php": ">=8.3",
    "ext-pdo": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.70",
    "imbo/imbo": "dev-main",
    "imbo/imbo-coding-standard": "^2.0",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Imbo\\": "src/"
    }
  },
  "scripts": {
    "sa": "vendor/bin/phpstan analyse",
    "cs": "vendor/bin/php-cs-fixer fix --dry-run --diff",
    "ci": [
      "@sa",
      "@cs"
    ]
  },
  "config": {
    "sort-packages": true
  }
}
